.site-meta {
  flex-grow: 1;
  text-align: center;

  +mobile() {
    text-align: center;
  }
}

.custom-logo-image {
  margin-top: -30px;

  +tablet-mobile() {
    display: true;
  }
}

.brand {
  border-bottom: none;
  color: var(--brand-color);
  display: inline-block;
  padding: 0 40px;

  &:hover {
    color: var(--brand-hover-color);
  }
}

.site-title {
  font-family: $font-family-logo;
  font-size: $font-size-title;
  font-weight: normal;
  margin: 0;
  color: black;
}

.site-subtitle {
  color: $subtitle-color;
  font-size: $font-size-subtitle;
  margin: 0px 0px 0;
}

.use-motion {
  .site-title, .site-subtitle, .custom-logo-image {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
